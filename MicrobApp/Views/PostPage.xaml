<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicrobApp.Views.PostPage"
             Title="Nuevo Post"
             >
    <VerticalStackLayout>
        <Grid BackgroundColor="White" RowDefinitions=".2*,.6*,.2*" Margin="2">
            <HorizontalStackLayout>
                <ImageButton Source="account_circle.svg"
                        HorizontalOptions="Start"
                             Margin="2"
                             HeightRequest="50"
                             WidthRequest="52"
                             />
                <VerticalStackLayout>
                <Label Margin="2"
                       FontSize="Medium">
                    Ana Luisa</Label>
                    <Label>
                        @analuisa@perrito
                    </Lab
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <StackLayout  Grid.Row="1">
                <!-- Título del post -->
                <Entry Placeholder="Título del post"
                       PlaceholderColor="DimGrey"/>

                <!-- Cuerpo del post (Editor para texto multilinea) -->
                <Editor Placeholder="Escribe tu mensaje..." 
                        PlaceholderColor="DimGrey"
                        HeightRequest="250"
                        
                        />
                <Label Text="0/250" HorizontalTextAlignment="End" Margin="4"/>


            </StackLayout>
            <Button x:Name="btnPublicar" 
                        Grid.Row="2"
                        Text="Publicar" 
                        HorizontalOptions="End"
                        VerticalOptions="End"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>