<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MicrobApp.Models"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="MicrobApp.Views.ProfilePage"
             x:DataType="{x:Type models:UserProfile}">
    
    <ScrollView HorizontalScrollBarVisibility="Never">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">
            <Grid Grid.Row="0">
                <Frame VerticalOptions="Start" HeightRequest="70" Padding="0" CornerRadius="0">
                    <Image BackgroundColor="#9BA7BF" Aspect="AspectFill"/>
                </Frame>

            </Grid>

            <Grid Grid.Row="1" Margin="10,-70,0,0" ColumnDefinitions="Auto,Auto" HorizontalOptions="Start">
                <toolkit:AvatarView
                    Grid.Column="0"
                    ImageSource="{Binding ProfileImage}"
                    BorderColor="White"
                    BorderWidth="10"
                    CornerRadius="70"
                    HeightRequest="140"
                    WidthRequest="140"/>
                <Button x:Name="SeguirButton"
                        Grid.Column="2"
                        Clicked="SeguirButton_Clicked"
                        FontFamily="InterBold"
                        FontSize="17"
                        BackgroundColor="#BF8136"
                        TextColor="White"
                        HeightRequest="40"
                        WidthRequest="150"
                        MinimumWidthRequest="100"
                        HorizontalOptions="End"
                        Margin="80,70,0,0"
                        Padding="0">
                </Button>
            </Grid>

            <Label Grid.Row="2" FontAttributes="Bold" TextColor="#141619" HorizontalTextAlignment="Start" Margin="15,0,0,0" FontSize="22">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding FirstName}"/>
                        <Span Text=" "/>
                        <Span Text="{Binding LastName}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="3" Text="{Binding UserName}" TextColor="#687684" HorizontalTextAlignment="Start" Margin="15,0,0,0" FontSize="16"/>
            <Label Grid.Row="4" Text="{Binding Biography}" FontSize="15" TextColor="#141619" LineBreakMode="WordWrap" Margin="15,10,0,0" HorizontalOptions="StartAndExpand"/>

            <Grid Grid.Row="5" ColumnDefinitions="Auto,Auto" HorizontalOptions="Start" Margin="15,10,0,0">
                <Image Grid.Column="0" Source="calendar_icon.svg" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
                <Label Grid.Column="1">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=" Se uniÃ³ " FontSize="15" TextColor="#687684" />
                            <Span Text="{Binding CreationDate}" FontSize="15" TextColor="#687684" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>

            <Grid Grid.Row="6" ColumnDefinitions="Auto,Auto" HorizontalOptions="Start" Margin="15,10,0,0">
                <Label Grid.Column="0" Margin="0,0,10,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding FollowersNumber}" FontAttributes="Bold" FontSize="15" TextColor="#141619" />
                            <Span Text=" Seguidores" FontSize="15" TextColor="#687684" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Grid.Column="1" Margin="10,0,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding FollowingNumber}" FontAttributes="Bold" FontSize="15" TextColor="#141619" />
                            <Span Text=" Siguiendo" FontSize="15" TextColor="#687684" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
            <BoxView Grid.Row="7" HorizontalOptions="FillAndExpand" HeightRequest="1"  Margin="-20,13,0,12" Color="#CED5DC"/>
            <Grid Grid.Row="8">
                <CollectionView x:Name="userPosts" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Post">
                            <Grid BackgroundColor="White" 
                                Padding="10">
                                 
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition Height="1" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    Grid.Row="0"
                                    RowDefinitions="Auto, Auto"
                                    ColumnDefinitions="Auto, Auto">
                                    <Frame Grid.Column="0"
                                           Grid.Row="0"
                                           BorderColor="Black"
                                           CornerRadius="50"
                                           HeightRequest="60"
                                           WidthRequest="60"
                                           IsClippedToBounds="True"
                                           VerticalOptions="Start">
                                        <ImageButton Source="{Binding UserOwner.ProfileImage}"
                                                     Clicked="GoToUserPerfil"
                                                     Aspect="AspectFill"
                                                     HeightRequest="100"
                                                     WidthRequest="100" />
                                    </Frame>
                                    <VerticalStackLayout Grid.Column="1" Margin="20,0,0,0">
                                        <Label x:Name="TextName"
                                               FontSize="Medium">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding UserOwner.FirstName}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding UserOwner.LastName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label x:Name="TextUser"
                                               Text="{Binding UserOwner.UserName}" />
                                    </VerticalStackLayout>
                                </Grid>

                                <Label Text="{Binding Text}"
                                       Grid.Row="1"
                                       TextColor="Black"
                                       FontSize="Body"
                                       BackgroundColor="Transparent"
                                       Padding="0, 15, 0, 8">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnLabelTapped" />
                                    </Label.GestureRecognizers>
                                    </Label>
                                <HorizontalStackLayout 
                                    Grid.Row="2"
                                    HorizontalOptions="End"
                                    Spacing="10">
                                <Button 
                                    Grid.Row="2"
                                    Margin="5"
                                    BackgroundColor="Beige"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    HorizontalOptions="Start"
                                    ImageSource="heart_post.svg"
                                    CommandParameter="{Binding PostId}"
                                    Clicked="Button_Clicked"/>
                                    <Button 
                                    BackgroundColor="Aquamarine"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    HorizontalOptions="Center"
                                    ImageSource="forum.svg"/>
                                    <Button 
 
                                    BackgroundColor="Coral"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    ImageSource="repost_icon.svg"
                                    HorizontalOptions="End"/>
                                </HorizontalStackLayout>
                                
                                <BoxView Grid.Row="3"
                                        Color="Silver"
                                        HorizontalOptions="CenterAndExpand"/>
                                <BoxView Grid.Row="3"
                                         Grid.Column="1"
                                        Color="Silver"
                                        HorizontalOptions="CenterAndExpand"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <ContentView>
                            <StackLayout>
                                <Label Text="Sin posts para mostrar."
                                           Margin="10,25,10,10"
                                           FontSize="18"
                                           HorizontalOptions="Fill"
                                           HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>